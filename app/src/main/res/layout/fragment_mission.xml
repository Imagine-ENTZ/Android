<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MissionFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="364dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="@drawable/corner_round">
        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginLeft="35dp"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textFontWeight="@integer/material_motion_duration_medium_2"
            android:textSize="15sp"
            android:text="AI-recommended Mission"
            android:fontFamily="@font/Poppins_Medium"/>
        <ImageButton
            android:src="@drawable/icon_refresh"
            android:background="@drawable/refresh_button_design"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="15dp"  />

        <FrameLayout
            android:id="@+id/mission_box_1"
            android:background="@drawable/button_corner_round"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_width="140dp"
            android:layout_height="60dp" >

            <TextView
                android:id="@+id/mission_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="50dp"
                android:text="10Minutes"
                android:textColor="#7A9CFD"
                android:fontFamily="@font/Poppins_Medium"/>

            <TextView
                android:id="@+id/mission_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Meditate"
                android:fontFamily="@font/Poppins_Medium"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/mission_box_2"
            android:background="@drawable/button_corner_round"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="194dp"
            android:layout_width="140dp"
            android:layout_height="60dp" >

            <TextView
                android:id="@+id/mission_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="50dp"
                android:text="10Minutes"
                android:textColor="#7A9CFD"
                android:fontFamily="@font/Poppins_Medium"/>

            <TextView
                android:id="@+id/mission_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Running"
                android:fontFamily="@font/Poppins_Medium"/>
        </FrameLayout>

    </FrameLayout>

    <HorizontalScrollView
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="89dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/mission_button_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:layout_marginVertical="14.5dp"
                android:layout_marginHorizontal="10dp"
                android:text="B1" />

            <Button
                android:id="@+id/mission_button_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:layout_marginVertical="14.5dp"
                android:layout_marginHorizontal="10dp"
                android:text="B2" />

            <Button
                android:id="@+id/mission_button_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:layout_marginVertical="14.5dp"
                android:layout_marginHorizontal="10dp"
                android:text="B3" />

            <Button
                android:id="@+id/mission_button_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:layout_marginVertical="14.5dp"
                android:layout_marginHorizontal="10dp"
                android:text="B4" />

            <Button
                android:id="@+id/mission_button_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:layout_marginVertical="14.5dp"
                android:layout_marginHorizontal="10dp"
                android:text="B5" />
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>